<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anand.vishal.billingsystem">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddCategory"
            android:label="@string/title_activity_add_category" >
        </activity>
        <activity
            android:name=".AddCategory$AddProduct"
            android:label="@string/title_activity_add_product" >
        </activity>
        <activity
            android:name=".Customer"
            android:label="@string/title_activity_customer" >
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>

    </application>

</manifest>
